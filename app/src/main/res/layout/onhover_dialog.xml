<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="310dp"
    android:layout_height="380dp"
    android:paddingBottom="50dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="15dp"
    >

    <RelativeLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg"
        android:padding="10dp"
        android:elevation="15dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:paddingBottom="30dp">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="50dp"
            android:id="@+id/cardProfile">

            <ImageView
                android:id="@+id/ivProfileImage"
                android:layout_width="70dp"
                android:layout_height="70dp"
                tools:srcCompat="@tools:sample/avatars" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cardProfile"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:text="Randy" />

        <TextView
            android:id="@+id/tvScreenName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvName"
            android:textSize="16sp"
            tools:text="randyalvarez" />

        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvScreenName"
            android:layout_marginTop="30dp"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            tools:text="The Real Twitter API. Tweets
        about API changes, service issues and our Developer Platform. Don't get an answer? It's on my website." />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="@string/follow"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@color/twitter_blue_fill_pressed"
            android:textSize="16sp"
            android:typeface="normal"
            android:layout_alignParentEnd="true"
            android:background="@drawable/btn_back"/>

        <TextView
            android:id="@+id/tvFollowing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            tools:text="600"
            android:textColor="@android:color/black"
            android:layout_below="@+id/tvDescription"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/following"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvDescription"
            android:layout_marginStart="5dp"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@+id/tvFollowing"
            android:text="Following"
            android:textColor="#6C6C6C" />

        <TextView
            android:id="@+id/tvFollowers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            tools:text="1500"
            android:textColor="@android:color/black"
            android:layout_below="@+id/tvDescription"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@+id/following"
            android:layout_marginStart="30dp"/>

        <TextView
            android:id="@+id/followers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvDescription"
            android:layout_marginStart="5dp"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@+id/tvFollowers"
            android:text="Followers"
            android:textColor="#6C6C6C" />




    </RelativeLayout>







</RelativeLayout>